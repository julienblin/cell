.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a.brand(href='/')= config.app.name
      ul.nav
        li
          button#btnNewProject.btn(href='#')
            i.icon-file
        li
          | &nbsp;
        li
          button#btnOpenProject.btn(href='#')
            i.icon-folder-open
        li.divider-vertical

      ul.nav.pull-right
        - if (req.user && req.user.isAdmin)
          li.divider-vertical
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle="dropdown") Admin
            ul.dropdown-menu
              li
                a(href='/admin/users') Users
        li.divider-vertical
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle="dropdown")
            i.icon-user
            &nbsp;
            != req.user.username
            b.caret
          ul.dropdown-menu
            li
              a(href='/logout')
                i.icon-off
                |  Logout