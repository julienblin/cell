- var project = { clientName: '', projectName: '' }

#modalNew.modal.largerModal.hide.fade(role="dialog", aria-labelledby="modalNew", aria-hidden="true")
  .modal-header
    button.close(data-dismiss="modal", aria-hidden="true") x
    h3 New project
  .modal-body
    ul.nav.nav-tabs
      li.active
        a(href="#modalNewTabNew", data-toggle="tab") New
      li
        a(href="#modalNewTabCopy", data-toggle="tab") Copy from another project

    form.form-horizontal.no-margin
      != editors.text(project, 'clientName', { label: 'Client name:', placeholder: 'Complete name of the client', inputClass: 'input-xlarge', autofocus: true })
      != editors.text(project, 'projectName', { label: 'Project name:', placeholder: '(eventually including revision)', inputClass: 'input-xlarge' })

    .tab-content
      #modalNewTabNew.tab-pane.fade.in.active

      #modalNewTabCopy.tab-pane.fade
        hr.no-margin
        | Here goes the select table

  .modal-footer
    button.btn(data-dismiss="modal", aria-hidden="true") Cancel
    button.btn.btn-primary Create